<div class="textarea formRoot{% if classRoot %} {{ classRoot }}{% endif %}{% if error %} invalid{% endif %}">{# -#}
  <div class="formBox">{# -#}
    <textarea{{ ' ' -}}
      class="formControl{% if classElement %} {{ classElement }}{% endif %}"{{ ' ' -}}
      id="{{ id | default('input-'~name) }}"{{ ' ' -}}
      name="{{ name }}"{{ ' ' -}}
      rows="{{ rows | default(4) }}"
      {%- if required %} required{% endif %}
      {%- if attrs %} {{ attrs | raw }}{% endif -%}
    ></textarea>
    <span class="formUnderline"></span>
    {%- if label -%}
      <label for="{{ id | default('input-'~name) }}" class="formLabel">
        {{- label | raw -}}
      </label>
    {%- endif -%}
  </div>
  {%- if error %}<div class="formFeedback">{{ error }}</div>{% endif -%}
</div>{# -#}
