<div class="media media--video{%- if classRoot %} {{ classRoot }}{% endif -%}">{# -#}
  <span class="mediaProportion" style="padding-top: {{ (height * 100) / width }}%"></span>{# -#}
  <div{{ ' ' -}}
    class="mediaElement bg{%- if classBg %} {{ classBg }}{% endif -%}"
    {%- if bgColor %} style="background-color: {{ bgColor }}"{% endif -%}
  >
  </div>{# -#}
  <video{{ ' ' -}}
    title="{{ alt }}"{{ ' ' -}}
    src="{{ video.src }}"{{ ' ' -}}
    poster="{{ poster.src }}"{{ ' ' -}}
    class="mediaElement video video-js"{{ ' ' -}}
    style="
      {%- if bgColor %}background-color:{{ bgColor }}{% endif -%}
      {%- if width and not fullwidth %}max-width:{{ width }}px;{% endif -%}
      {%- if width and fixed %}width:{{ width }}px;max-width:{{ width }}px;{% endif -%}
      {{- styles -}}
    "
    {%- if attrs %} {{ attrs | raw }}{% endif -%}
  >
    {#-
    <source src="{{ video.src }}.mp4" type="video/mp4">
    <source src="{{ video.src }}.webm" type="video/webm">
    <source src="{{ video.src }}.ogg" type="video/ogg">
    -#}
    <noscript>
      To view this video please enable JavaScript, and consider upgrading to a web browser that
      <a href="https://videojs.com/html5-video-support/" target="_blank">supports HTML5 video</a>
    </noscript>
  </video>{# -#}
</div>{# -#}
